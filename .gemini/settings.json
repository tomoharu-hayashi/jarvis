{
	"mcpServers": {
		"calculator": {
			"command": "uvx",
			"args": ["mcp-server-calculator"],
			"enabled": true
		},

		"time": {
			"command": "uvx",
			"args": ["mcp-server-time", "--local-timezone=Asia/Tokyo"],
			"enabled": true
		},
	"context7": {
		"command": "bunx",
		"args": ["-y", "@upstash/context7-mcp@latest"],
		"enabled": true
	  },
	"desktop": {
		"command": "mcp-desktop",
		"enabled": true
	}
	}

}
